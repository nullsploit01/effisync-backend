{
  "name": "effisync-backend",
  "version": "0.0.0",
  "description": "Backend for EffiSync Project",
  "main": "src/server.ts",
  "scripts": {
    "test": "jest",
    "start": "tsc && node ./dist/server.js",
    "dev": "ts-node-dev src/server.ts --respawn --transpileOnly",
    "check-types": "tsc --noEmit",
    "prettier": "prettier --write \"./src/**/*{js,ts}\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nullsploit01/effisync-backend.git"
  },
  "author": "nullsploit01",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nullsploit01/effisync-backend/issues"
  },
  "homepage": "https://github.com/nullsploit01/effisync-backend#readme",
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@apollo/subgraph": "^2.5.5",
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.1.1",
    "express-validator": "^7.0.1",
    "graphql": "^16.8.0",
    "graphql-tag": "^2.12.6",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.2",
    "node-cache": "^5.1.2",
    "validator": "^13.11.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mongodb-memory-server": "^8.15.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/test.setup.ts"
    ]
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint \"./src/**/*{js,ts}\" --fix",
      "prettier --write \"./**/**/*{js,ts}\""
    ]
  }
}
